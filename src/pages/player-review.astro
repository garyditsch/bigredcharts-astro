---
// Component Imports
import MainLayout from '../layouts/MainLayout.astro';
import PlayerTableWithFilters from '../components/RosterTable.tsx';

import roster_data from '../data/PlayerRoster';
---

<MainLayout>
	<!-- Story Intro Section -->
	<div id="story_intro" class="w-full mx-auto px-8 py-4">
		<div class="bg-white shadow-md rounded-lg p-10 flex flex-col md:flex-row items-start">
			
			<!-- Text Content Column -->
			<div class="md:w-full md:pr-8">
				<p class="mb-4 text-gray-700">
					<h1 class="text-2xl text-gray-700">How are the Huskers utilizing the Roster?</h1>
				</p>
				<p class="my-4 text-gray-700">
					<p>Stats through 12 games</p>
					<p>Only includes Offensive and Defensive Snaps</p>
					<p class="mb-4">Roster data from <a href="https://collegefootballdata.com/">College Footbal Data</a></p>
					<table class="min-w-full bg-white border border-gray-300">
						<thead>
							<tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
								<th class="py-3 px-6 text-left">Year</th>
								<th class="py-3 px-6 text-left">Total Snaps</th>
								<th class="py-3 px-6 text-left">Percentage of Snaps</th>
								<th class="py-3 px-6 text-left">Games Played</th>
								<th class="py-3 px-6 text-left">Players on Roster</th>
								<th class="py-3 px-6 text-left">Details</th>
							</tr>
						</thead>
						<tbody class="text-gray-600 text-sm font-light">
							<tr class="border-b border-gray-200 hover:bg-gray-100">
								<td class="py-3 px-6 text-left">Freshmen</td>
								<td class="py-3 px-6 text-left">2714</td>
								<td class="py-3 px-6 text-left">15.54%</td>
								<td class="py-3 px-6 text-left">157</td>
								<td class="py-3 px-6 text-left">81</td>								
								<td class="py-3 px-6 text-left">
									<a href="/freshmen-review">
										See Details
									</a>
								</td>
							</tr>
							<tr class="border-b border-gray-200 hover:bg-gray-100">
								<td class="py-3 px-6 text-left">Sophomore</td>
								<td class="py-3 px-6 text-left">2852</td>
								<td class="py-3 px-6 text-left">16.44%</td>
								<td class="py-3 px-6 text-left">138</td>
								<td class="py-3 px-6 text-left">25</td>
							</tr>
							<tr class="border-b border-gray-200 hover:bg-gray-100">
								<td class="py-3 px-6 text-left">Junior</td>
								<td class="py-3 px-6 text-left">4609</td>
								<td class="py-3 px-6 text-left">26.56%</td>
								<td class="py-3 px-6 text-left">173</td>
								<td class="py-3 px-6 text-left">26</td>
							</tr>
							<tr class="border-b border-gray-200 hover:bg-gray-100">
								<td class="py-3 px-6 text-left">Senior</td>
								<td class="py-3 px-6 text-left">7177</td>
								<td class="py-3 px-6 text-left">41.36%</td>
								<td class="py-3 px-6 text-left">166</td>
								<td class="py-3 px-6 text-left">19</td>
							</tr>
						</tbody>
					</table>
					
				</p>
			</div>
		</div>
	</div>	
	<!-- Filters and Player Table Section -->
	<div class="w-full mx-auto px-8 py-4">
		<div class="bg-gray-300 shadow-md rounded-lg p-10">
		  <!-- React Component with Filters -->
		  <PlayerTableWithFilters data={roster_data} client:visible />
		</div>
	  </div>
</MainLayout>