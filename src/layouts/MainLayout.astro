---
import Header from '../components/Header.astro'
import Sidebar from '../components/Sidebar.astro'
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Big Red Charts</title>
  <!-- Optional: Include Heroicons for Icons -->
  <script src="https://unpkg.com/heroicons@2.0.18/dist/heroicons.min.js"></script>
  <!-- Global Styles -->
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="flex h-screen bg-gray-100">

  <!-- Sidebar -->
  <Sidebar />

  <!-- Mobile Sidebar Toggle -->
  <div class="md:hidden flex items-center bg-red-600 text-white p-4">
    <button id="menu-button" class="text-white focus:outline-none">
      <!-- Menu Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <h2 class="ml-4 text-2xl font-bold">Big Red Charts</h2>
  </div>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col overflow-hidden">

    <!-- Header -->
    <Header />

    <!-- Main Body -->
    <main class="flex-1 overflow-y-auto p-6">
      <slot />
    </main>
  </div>

  <!-- Mobile Sidebar Modal -->
  <div id="mobile-sidebar" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <Sidebar isMobile />
  </div>

  <!-- Tailwind CSS JS (Optional for Interactivity) -->
  <script>
    // Toggle Mobile Sidebar
    const menuButton = document.getElementById('menu-button');
    const mobileSidebar = document.getElementById('mobile-sidebar');
    const closeButton = mobileSidebar.querySelector('#close-button');

    menuButton.addEventListener('click', () => {
      mobileSidebar.classList.remove('hidden');
    });

    if (closeButton) {
      closeButton.addEventListener('click', () => {
        mobileSidebar.classList.add('hidden');
      });
    }

    // Close sidebar when clicking outside
    window.addEventListener('click', (e) => {
      if (e.target === mobileSidebar) {
        mobileSidebar.classList.add('hidden');
      }
    });
  </script>

</body>
</html>
